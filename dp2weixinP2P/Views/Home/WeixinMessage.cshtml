@model  dp2weixinP2P.Models.MessageModel
@{
    ViewBag.Title = "WeixinMessage";


}
@using (Html.BeginForm("WeixinMessage", "home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group form-group-lg">
        <label class="col-sm-2 control-label" style="color:gray">request</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="2" id="RequestMsg" name="RequestMsg"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-primary btn-lg" data-bind="click: addLib">发送</button>
        </div>
    </div>
    <div class="form-group form-group-lg">
        <label class="col-sm-2 control-label" style="color:gray">response</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="10" readonly>@Model.ResponseMsg</textarea>
            <span style="color:blue">您刚才发的消息是:@Model.RequestMsg</span>
        </div>
    </div>


}
